{% extends 'navbar/layout.html.twig' %}

{% block title %}Bienvenue sur Francecam
{% endblock %}

{% block content %}
	<div
		class="container">

		<!-- TITRE ET BARRE DE RECHERCHE -->

		<div class="searchBlock">
			<div
				class="searchCenter">
				<!-- TITRE -->
				<div class="logoSearch">
					<img class="logoHome" src="{{asset('build/images/FRANCECAM-logo.png')}}" alt="logo du site Francecam">
					<div class="titreHome">
						<h1>Francecam</h1>
					</div>

				</div>

				<div class="tagline">
					<h2>La base de données des caméras du cinéma francophone</h2>
				</div>

				<div
					class="search">
					<!-- BARRE DE RECHERCHE -->
					<div class="searchBarCenter">
						<div class="formTop">
							<label>Rechercher</label>
						</div>
						{{ render(controller(
        			'App\\Controller\\SearchController::searchBar'
    				))
				}}
					</div>
				</div>
			</div>
		</div>

		<!-- DERNIERS AJOUTS -->

		<div class="latest">
			<div class="flexLatest">
				<div class="homeCameraList">
					<div class="titreLatest">
						<h3>Dernières caméras</h3>
					</div>
					<div class="tableau">
						{% include "camera/_camera_list.html.twig" %}
					</div>
				</div>
			</div>
			<div class="flexLatest">
				<div class="homeFilmList">
					<div class="titreLatest">
						<h3>Derniers films</h3>
					</div>
					{% include "/film/_home_film.html.twig" %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
