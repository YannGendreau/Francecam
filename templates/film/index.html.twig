{% extends 'navbar/layout.html.twig' %}

{% block title %}Film index
{% endblock %}

{% block content %}
	<h1>Film index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Duree</th>
				<th>Synopsis</th>
				<th>Decade</th>
				<th>Sortie</th>
				<th>marque</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for film in films %}
				<tr>
					<td>{{ film.id }}</td>
					<td>{{ film.title }}</td>
					<td>{{ film.duree }}</td>
					<td>{{ film.synopsis }}</td>
					<td>{{ film.decade }}</td>
					<td>{{ film.sortie }}</td>
					<td>
						{% for m in film.marques %}
							{{ m.name }}
						{% endfor %}
					</td>

					<td>
						<a href="{{ path('film_show', {'slug': film.slug}) }}">show</a>
						<a href="{{ path('film_edit', {'slug': film.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('film_new') }}">Create new</a>
{% endblock %}
