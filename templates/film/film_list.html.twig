{% extends 'navbar/layout.html.twig' %}

{% block title %}Francecam | Tous les films.
{% endblock %}

{% block content %}
	<div class="container js-filter">

		<div class="title">
			<h1>Tous les films</h1>
		</div>

		{# <div class="leftside"></div> #}
		<aside class="sidepanel" id="mySidepanel">
			{% include "film/_film_list_filter.html.twig" with {form: form} only %}
		</aside>

		<div class="triangle" id="">
			<button title="Filtres de recherche" id="clickMenu" class="openbtn">
				<img src="{{asset('build/images/triangle-filter.svg')}}" alt="">
