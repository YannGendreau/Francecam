		</div>

		<div class="rightside">

			<div class="sorting js-filter-sorting" id"">
				{% include "film/_sorting.html.twig" %}
			</div>
			<div class="showList js-filter-content">
				{% include "film/_film_list.html.twig" %}
			</div>
			<div class="paginate js-filter-pagination">
				{% include "film/_pagination.html.twig" %}
			</div>
		</div>

	</div>
{% endblock %}
