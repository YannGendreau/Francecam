{% extends 'navbar/layout.html.twig' %}

{% block title %}
	{{film.title}}
{% endblock %}

{% block content %}
	<div id="container">
		{% include "includes/flashes/_flash_message.html.twig" %}
		<div class="tableauCamera">
			<div class="imageCam">
				{% if film.poster %}
					<div class="imgMov"><img src="/build/images/posters/{{film.poster}}" alt=" "></div>
				{% else %}
					<div class="addPoster">
						<a href="{{path('film_edit', {slug:film.slug})}}">Ajouter une affiche</a>
					</div>
				{% endif %}
				<div class="imgMovShadow"><img src="{{asset('build/images/ombre-photo.png')}}" alt=""></div>
			</div>
			<div class="descriptionFilm">
				<div class="titreCam">
					<h1>{{film.title}}
					</h1>
					<div class="overview">
						<div>
							<h5>{{film.getRuntime(film.duree)}}</h5>
							<span>/</span>
							{% for g in film.genres %}
								{% if film.genres| length >= 2 %}
									<h5>{{g.name}}</h5>
									<span>-</span>
								{% elseif film.genres| length <= 1 %}
									<h5>{{g.name}}</h5>
								{% endif %}
							{% endfor %}
							<span>/</span>
							<h5>{{film.sortie}}</h5>
						</div>
					</div>
					<div class="trait"></div>
				</div>
				<div class="summary">
					<h4>Résumé</h4>
					<p>{{film.synopsis}}</p>
				</div>


				<div class="artisteDivD">
					<div class="realDivD">
						<div class="realTitreD">
							<h4>Réalisation</h4>
						</div>
						<div class="realNameD">
							{% if film.directors | length > 0 %}
								{% for director in film.directors %}
									<a href="">
										<p>{{director.name}}</p>
									</a>
								{% endfor %}
							{% elseif film.directors | length > 1 %}
								<a href="#">
									<p>{{director.name}}</p>
								</a>
								<br>
							{% else %}
								{% if app.user %}
									<a href="{{path('film_edit', {slug:film.slug})}}">
										<p class="addArtist">Ajouter</p>
									</a>
								{% else %}
									<a href="{{path('app_login')}}">
										<p class="addArtist">Se connecter pour ajouter</p>
									</a>
								{% endif %}
							{% endif %}
						</div>
					</div>
					<div class="dpDivD">
						<div class="dpTitreD">
							<h4>Direction de la photographie</h4>
						</div>
						<div class="dpNameD">
							{% if film.dirphoto | length > 0 %}
								{% for director in film.dirphoto %}
									<a href="">
										<p>{{director.name}}</p>
									</a>
								{% endfor %}
							{% elseif film.directors | length > 1 %}
								<a href="#">
									<p>{{director.name}}</p>
								</a>
								<br>
							{% else %}
								{% if app.user %}
									<a href="{{path('film_edit', {slug:film.slug})}}">
										<p class="addArtist">Ajouter</p>
									</a>
								{% else %}
									<a href="{{path('app_login')}}">
										<p class="addArtist">Se connecter pour ajouter</p>
									</a>
								{% endif %}
							{% endif %}
						</div>


					</div>
				</div>
			</div>
			<div class="specCam">
				<div class="tabContainer">
					<div class="buttonContainer">
						<button class="active">Caméras</button>
						<button>Fiches</button>
						<button>Vidéos</button>
					</div>
					{# <div class="borderBottom"></div> #}
					<div class="contentCam">
						<div class="tabPanel" style="display: block;">
							<div>
								<div class="tableauCamFilm">
									{% if film.cameraModele | length >= 1 %}
										{% for camera in film.cameraModele %}
											<div class="cardGridCam">
												<div class="cardSmCam">
													<div
														class="imgCardCam">
														{# <a href="{{path('modele_show', {slug:camera.slug} )}}"><img src={{camera.image}} alt="placeholder"></a> #}
														<a href="{{path('cameras_show', {slug:camera.slug} )}}"><img src="alt=" placeholder""></a>
													</div>
													<a href="{{path('cameras_show', {slug:camera.slug} )}}">
														<div class="smDescriptionOverlay">
															<em>{{camera.marque}}
																{{camera.modele}}</em>
														</div>
														<div class="description__overlay description__overlay--blur">
															<h3>{{camera.marque}}</h3>
															<h2>{{camera.modele}}</h2>
														</div>
													</a>
												</div>
											</div>
										{% endfor %}
									{% elseif film.cameraModele | length == 0 %}
										{% for m in film.marques %}
											<div class="cardGridCam">
												<div class="cardSmCam">
													<div class="imgCardCam">
														<a href="{{path('marque_show', {slug: m.slug} )}}"><img src="alt=" placeholder""></a>
													</div>
													<a href="{{path('marque_show', {slug: m.slug} )}}">
														<div class="smDescriptionOverlay">
															<em>{{m.name}}</em>
														</div>
														<div class="description__overlay description__overlay--blur">
															<h2>{{m.name}}
															</h2>
														</div>
													</a>
												</div>
											</div>
										{% endfor %}

										{# {% else if film.modele | length > 1 || film.marque | length > 1 %} #}
									{% elseif film.cameraModele | length == 0 and film.marques | length == 0 %}

										<h1>Pas de camera</h1>
									{% endif %}


								</div>
							</div>
						</div>
						<div class="tabPanel" style="display: none;">

							<h2>LISTE DES FILMS</h2>

						</div>
						<div class="tabPanel" style="display: none;">
							{% for cam in film.camera %}{# {{cam.marqueModele}} #}
								{# {{cam.cameraName()}} #}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	{# 
																																																																																																<h1>Film</h1>
																																																																																															
																																																																																																<table class="table">
																																																																																																	<tbody>
																																																																																																		<tr>
																																																																																																			<th>Id</th>
																																																																																																			<td>{{ film.id }}</td>
																																																																																																		</tr>
																																																																																																		<tr>
																																																																																																			<th>Title</th>
																																																																																																			<td>{{ film.title }}</td>
																																																																																																		</tr>
																																																																																																		<tr>
																																																																																																			<th>Duree</th>
																																																																																																			<td>{{ film.duree }}</td>
																																																																																																		</tr>
																																																																																																		<tr>
																																																																																																			<th>Synopsis</th>
																																																																																																			<td>{{ film.synopsis }}</td>
																																																																																																		</tr>
																																																																																																		<tr>
																																																																																																			<th>Decade</th>
																																																																																																			<td>{{ film.decade }}</td>
																																																																																																		</tr>
																																																																																																		<tr>
																																																																																																			<th>Sortie</th>
																																																																																																			<td>{{ film.sortie }}</td>
																																																																																																		</tr>
																																																																																																	</tbody>
																																																																																																</table>
																																																																																															
																																																																																																<a href="{{ path('film_index') }}">back to list</a>
																																																																																															
																																																																																																<a href="{{ path('film_edit', {'slug': film.slug}) }}">edit</a>
																																																																																															
																																																																																																{{ include('film/_delete_form.html.twig') }} #}
{% endblock %}
