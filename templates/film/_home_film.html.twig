<div class="tableau">
	{% for film in resultFilm %}
		<div class="cardGrid">
			<div class="cardSm">
				<div
					class="imgCard">
					{# Vérifie la présence d'affiche ou la remplace par une description #}
					{% if film.poster %}
						<a href="{{path('film_show', {slug: film.slug,})}}"><img src="/build/images/posters/{{film.poster}}" alt="Affiche du film {{film.title}}"></a>
					{% else %}
						<div class="description">
							<h3 id="over">{{film.title}}</h3>
							<div class="genreOverlay">
								{% for g in film.genres %}
									<em>{{g.name}}</em>
								{% endfor %}

							</div>
						</div>
					{% endif %}
				</div>
				{# Description au survol #}
				<a href="{{path('film_show', {slug: film.slug,})}}">
					<div
						class="description__overlay description__overlay--blur">
						{# titre #}
						<h3 id="over">{{film.title}}</h3>
						<div
							class="genreOverlay">
							{# genres #}
							{% for g in film.genres %}
								<em>{{g.name}}</em>
							{% endfor %}
						</div>
					</div>
				</a>
			</div>
		</div>
	{% endfor %}
</div>
