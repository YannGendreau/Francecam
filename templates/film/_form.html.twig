<div id="film">
	{{ form_start(form) }}

	<div class="rowFormTitle">
		<div>
			<h3>Titre</h3>
			{{form_row(form.title)}}
		</div>
	</div>
	<div class="rowFormDetails">
		<div class="sortie">
			<div>
				<h3>Date de sortie</h3>
				{{form_row(form.sortie)}}
			</div>
		</div>
		<div class="duree">
			<div>
				<h3>Durée</h3>
				<div>
					<span>{{form_row(form.duree)}}</span>
				</div>


			</div>
		</div>
		<div class="pays">
			<div>
				<h3>Pays de production</h3>
				{{form_row(form.pays)}}
			</div>
		</div>
	</div>
	<div class="rowFormGenres">
		<div class="genre">
			<div>
				<h3>Genres</h3>
				{{form_row(form.genres)}}

			</div>
		</div>
	</div>
	<div class="rowFormSynopsis">
		<div>
			<div>
				<h3>Synopsis</h3>

				{# {{form_errors(form.synopsis, {'attr': {'class': 'error'}})}} #}
				{{form_row(form.synopsis)}}

				<span id="count"></span>

			</div>

		</div>
	</div>
	<div class="rowFormPoster">
		<div>
			<div>
				<h3>Poster</h3>
				<div class="imgMovNew"><img src="/build/images/posters/{{film.poster}}" alt="Affiche du film {{film.poster}}"></div>
				<div class="posterForm">{{form_row(form.posterFile)}}</div>
			</div>

		</div>
	</div>
	<div class="rowFormArtist">

		<h3>Artistes</h3>
		<div class="realPhoto">
			<div class="realForm">
				<h5>Réalisation</h5>
				{{ form_row(form.directors) }}</div>
			<div class="dirphotForm">
				<h5>Photo</h5>
				{{ form_row(form.dirphoto) }}</div>
		</div>

	</div>
	<div class="rowFormCamera">
		<h3>Caméras</h3>

		<div class="marqueModele">
			<div class="marqueForm">

				<ul id="camera-fields-list" data-prototype="{{ form_widget(form.camera.vars.prototype)|e }}" data-widget-tags="{{ '<li></li>'|e }}" data-widget-counter="{{ form.camera|length }}">
					{% for cam in form.camera %}
						<li class="panel">
							{{ form_errors(cam.marque) }}
							{{ form_row(cam.marque) }}

							{{ form_errors(cam.modele) }}
							{{ form_row(cam.modele) }}
						</li>
					{% endfor %}
				</ul>


				<!-- <button type="button" id="add_item_link" data-collection-holder-class="camera-fields-list" data-list-selector="#camera-fields-list">Add a tag</button> -->

				{# <button type="button" class="add-another-collection-widget" data-list-selector="#email-fields-list">Add another email</button> #}

			</div>
		</div>
	</div>

	<div class="printBtn">
		<button class="btn">{{ button_label|default('Enregistrer') }}</button>
	</div>
	{{ form_end(form) }}</div>
