<div id="film">
	{{ form_start(form) }}
	{{form_widget(form._token)}}
	<div class="rowFormTitle">
		<div>
			<h3>Titre</h3>
			{{form_row(form.title)}}
		</div>
	</div>
	<div class="rowFormDetails">
		<div class="details">
			<div class="sortie">
				<div>
					<h3>Date de sortie</h3>
					{{form_row(form.sortie)}}
				</div>
			</div>
			<div class="duree">
				<div>
					<h3>Durée</h3>
					<div>
						<span>{{form_row(form.duree)}}</span>
					</div>
				</div>
			</div>
		</div>
		<div class="details">
			<div class="pays">
				<div>
					<h3>Pays de production</h3>
					{{form_row(form.pays)}}
				</div>
			</div>
			<div class="genre">
				<div>
					<h3>Genres</h3>
					{{form_row(form.genres)}}

				</div>
			</div>
		</div>
	</div>

	<div class="rowFormSynoPoster">

		<div class="syno">
			<h3>Synopsis</h3>
			<p>Pitchez le film en quelques mots</p>
			{{form_row(form.synopsis)}}
			<p>Il reste
				<span id="count"></span>
				caractères.</p>
		</div>
		<div class="poster">
			<h3>Poster</h3>
			<div class="imgMovNew"><img src="/build/images/posters/{{film.poster}}" alt="Affiche du film {{film.title}}"></div>
			<div class="posterForm">{{form_row(form.posterFile)}}</div>
		</div>

	</div>
	<div class="rowFormArtist">
		<h3>Artistes</h3>
		<div class="realPhoto">
			<div class="realForm">
				<h5>Réalisation</h5>
				{{ form_row(form.directors) }}
			</div>
			<div class="dirphotForm">
				<h5>Photo</h5>
				{{ form_row(form.dirphoto) }}
			</div>
		</div>

	</div>
	<div class="rowFormCamera">
		<h3>Caméras</h3>

		<div class="marqueModele">
			<div class="marqueForm">
				{{form_row(form.camera)}}
			</div>
		</div>
	</div>
	<div class="rowFormCaptcha">
		{{ form_row(form.captchaCode)}}
	</div>
	<div class="printBtn">
		<button class="btn">{{ button_label|default('Enregistrer') }}</button>
	</div>
	{{ form_end(form, {render_rest: false}) }}
</div>
