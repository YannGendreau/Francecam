<div class="resultTitle">
	<h2>Films</h2>
</div>
{% for f in film %}
	<div class="resultCard">
		<div class="cardSearch">
			<div class="cardGrid">
				<div class="cardSm">
					<div class="imgCard">
						{% if f.poster %}
							<a href=""><img src="/build/images/posters/{{f.poster}}" alt="affiche du film {{f.title}}"></a>
						{% endif %}
						{# <a href=""><img src="" alt="placeholder"></a> #}
					</div>
					{# <a href="{{path('film_show', {slug:film.slug, id:film.id})}}"> #}
					{# <a href="{{path('film_show', {slug: film.slug,})}}"> #}
					<a href="{{path('film_show', {slug: f.slug,})}}">
						<div class="description__overlay description__overlay--blur">
							<h2>
								{{f.title}}
							</h2>
							<div class="genreOverlay">
								{% for g in f.genres %}
									<em>{{g.name}}</em>
								{% endfor %}
							</div>

						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endfor %}
