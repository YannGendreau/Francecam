																																																																																																									<tbody>
																																																																																																										<tr class="tableauCell">
																																																																																																											<th>{{modele.weight}}</th>
																																																																																																											<th>
																																																																																																												{% for f in modele.format %}
																																																																																																													{{f.name}}
																																																																																																												{% endfor %}
																																																																																																											</th>
																																																																																																											<th>Oui</th>
																																																																																																											<th>{{modele.view}}</th>
																																																																																																											<th>Oui</th>
																																																																																																											<th>Oui</th>
																																																																																																											<th>{{modele.noise}}</th>
