{% extends 'navbar/layout.html.twig' %}

{% block title %}
	{{modele.marque.name}}{{modele.name}}
{% endblock %}

{% block content %}
	<div
		id="container">

		<!--FLASH MESSAGE-->
		{% include "includes/flashes/_flash_message.html.twig" %}

		<div
			class="tableauCamera">
			<!--AFFICHE-------------------------------->

			<div class="imageCam">

				<div class="imageCam">
					{% if modele.img %}
						<img class="imgCam" src="/build/images/imagesCam/{{modele.img}}" alt="Photographie de la camera {{modele.marque}} {{modele.name}}">
					{% else %}
						<img class="camLogo" src="/build/images/illustrations/camera-logo.png" alt="illustration de camera par défaut">
					{% endif %}
					<div class="imgMovShadow"><img src="{{asset('build/images/ombre-photo.png')}}" alt=""></div>
				</div>

			</div>

			<!--DESCRIPTION-------------------------------->
			<div class="descriptionFilm">
				<div class="titreCam">
					<h1 id="title">{{modele.marque}}
						{{modele.name}}</h1>
					<div class="overview">
						<div>
							<!--DUREE-->
							<a href="{{path('marque_show', {slug :modele.marque.slug})}}">
								<h5>{{modele.marque}}</h5>
							</a>
							<p>-</p>
							{% for f in modele.type %}
								<h5>{{f.name}}</h5>
							{% endfor %}
							<p>-</p>
							{% for format in modele.format %}
								<h5>{{format.name}}</h5>
							{% endfor %}
							<p>-</p>
							<a href="http://{{modele.marque.website}}">
								<h5>{{modele.marque.website}}</h5>
							</a>

						</div>
					</div>
					<div class="trait"></div>
				</div>
				<!--SYNOPSIS-------------------------------->
				<div class="summary">
					<h4>Résumé</h4>
					<p>{{modele.description}}</p>
				</div>
			</div>

			<!--INFOS-------------------------------->

			<div class="specCam">
				<div class="tabContainer">
					<div class="buttonContainer">
						<button class="active">Description</button>
						{# A AJOUTER PLUS TARD <button>Fiches</button> #}
						<button>Vidéos</button>
					</div>
					<div class="contentCam">
						<div class="tabPanel" style="display: block;">
							<div>

								<div class="cell">
									<div>
										<strong>
											<h3>Magasin</h3>
										</strong>
									</div>
									<div>
										{% if modele.magazine %}
											<h3>{{modele.magazine}}</h3>
										{% else %}
											<span>
												-
											</span>
										{% endif %}
									</div>
								</div>
								<div>
									<div>
										<strong>
											<h3>Obturateur</h3>
										</strong>
									</div>
									<div>
										<h3>
											{% if modele.shutter %}
												{% for s in modele.shutter %}
													{{s.angle}}
												{% endfor %}
											{% endif %}

										</h3>
									</div>
								</div>


								{# <table>
																																																																																																									<thead>
