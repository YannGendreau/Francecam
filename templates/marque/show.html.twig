{% extends 'navbar/layout.html.twig' %}

{% block title %}Les marques de caméras
{% endblock %}

{% block content %}


	<div id="container">
		<div class="tableauMarque">
			<div class="descriptionMarque">
				<div class="flexImgMarque">
					<div class="centerMarquePic">
						{% if marque.logoName %}
							<div class="imgMov"><img src="/build/images/marques/{{marque.logoName}}" alt="logo de la marque de caméra {{marque.name}}"></div>
						{% else %}
							<h1>{{marque.name}}
							</h1>
						{% endif %}
						<div class="imgMovShadow"><img src="{{asset('build/images/ombre-photo.png')}}" alt=""></div>
					</div>
				</div>


				<div class="overview">
					<div>
						<a href="http://{{marque.website}}">
							<h5>{{marque.website}}</h5>
						</a>
						<span>/</span>
						<h5>{{marque.pays}}</h5>
						<span>/</span>
						<h5>Fondé en
							{{marque.creation}}</h5>
					</div>
				</div>

				<div class="trait"></div>


				<div class="summary">
					<h4>Résumé</h4>
					<p>{{marque.description}}</p>
				</div>
			</div>

			<div class="specMarque">
				<div class="tabContainer">
					<div class="buttonContainer">
						<button class="active">Caméras</button>
						<button>Films</button>
					</div>
					<div class="contentCam">

						<div class="tabPanel" style="display: block;">
							<div>
								<div class="tableauCamFilm">
									{% if marque.modeles | length >= 1 %}
										{% for camera in marque.modeles %}
											<div class="cardGridCam">
												<div class="cardSmCam">
													<div class="imgCardCam">
														{% if camera.img %}
															<a href="{{path('modele_show', {slug:camera.slug} )}}"><img src="/build/images/imagesCam/{{camera.img}}" alt=""></a>
														{% else %}
															<div class="description">
																<h3>{{camera.marque}}</h3>
																<h2>{{camera.name}}</h2>
																{# <h5>{{c.cameraFormat.cameraType.name}}</h5> #}
																{% for f in camera.format %}
																	<h5>{{f.name}}</h5>
																{% endfor %}
															</div>
														{% endif %}
													</div>
													<a href="{{path('modele_show', {slug:camera.slug} )}}">
														<div class="description__overlay description__overlay--blur">
															<h3>{{camera.marque}}</h3>
															<h2>
																{{camera.name}}</h2>
															{# <h5>{{c.cameraFormat.cameraType.name}}</h5> #}
															{% for f in camera.format %}
																<h5>{{f.name}}</h5>
															{% endfor %}
														</div>
													</a>
												</div>
											</div>
										{% endfor %}
									{% else %}
										<p>pas de camera</p>
									{% endif %}
								</div>
							</div>
						</div>
						<div class="tabPanel" style="display: none;">
							<div class="posters">
								{% if marque.films %}
									{% for film in marque.films |slice(0, 6) %}
										<div class="cardGrid">
											<div class="cardSm">
												<div class="imgCard">
													{% if film.poster %}
														<a href="{{path('film_show', {slug: film.slug,})}}"><img src="/build/images/posters/{{film.poster}}" alt="Affiche du film {{film.title}}"></a>
													{% else %}
														<div class="description">
															<h1 id="over">{{film.title}}</h1>
															<div class="genreOverlay">
																{% for g in film.genres %}
																	<em>{{g.name}}</em>
																{% endfor %}

															</div>
														</div>
													{% endif %}
												</div>
												<a href="{{path('film_show', {slug: film.slug,})}}">
													<div class="description__overlay description__overlay--blur">
														<h1 id="over">{{film.title}}</h1>
														<div class="genreOverlay">
															{% for g in film.genres %}
																<em>{{g.name}}</em>
															{% endfor %}
														</div>
													</div>
												</a>
											</div>
										</div>

									{% endfor %}
									<div>
										<a href="">Voir plus</a>
									</div>
								{% else %}
									<p>Pas de Films</p>
								{% endif %}

							</div>
						</div>
						{# <div class="tabPanel" style="display: none;"></div> #}
					</div>
				</div>
			</div>
		</div>
	</div>


	{# <h1>Marque</h1>
																																																																																																																												
