{% extends 'navbar/layout.html.twig' %}

{% block title %}
	Francecam |
	{{marque.name}}
{% endblock %}

{% block content %}
	<div class="container">


		<div class="tableauMarque">
			<div class="descriptionMarque">
				<div class="flexImgMarque">
					<div class="centerMarquePic">
						{% if marque.logoName %}
							<div class="imgMov"><img src="/build/images/marques/{{marque.logoName}}" alt="logo de la marque de caméra {{marque.name}}"></div>
						{% else %}
							<h1>{{marque.name}}
							</h1>
						{% endif %}
						<div class="imgMovShadow"><img src="{{asset('build/images/ombre-photo.png')}}" alt=""></div>
					</div>
				</div>


				<div class="overview">
					<div>
						<a href="http://{{marque.website}}" alt="Visiter le site web de {{marque.name}}">
							<h5>{{marque.website}}</h5>
						</a>
						<span>/</span>
						<h5>{{marque.pays}}</h5>
						<span>/</span>
						<h5>Fondé en
							{{marque.creation}}</h5>
					</div>
				</div>

				<div class="trait"></div>


				<div class="summary">
					<h4>Résumé</h4>
					<p>{{marque.description}}</p>
				</div>
			</div>

			<div class="specMarque">
				<div class="tabContainer">
					<div class="buttonContainer">
						<button class="active">Caméras</button>
						<button>Films</button>
						{# <button>Vidéos</button> #}
					</div>
					<div class="contentCam">
						<div class="tabPanel" style="display: block;">
							<div class="specifications">
								{% if marque.modeles | length >= 1 %}
									{% for camera in marque.modeles %}
										<div class="cardGridCam">
											<div class="cardSmCam">
												<div class="imgCardCam">
													{% if camera.img | length >= 1 and camera.image | length == 0%}
														<div class="smDescriptionOverlay">
															<em>{{camera.marque}}
																{{camera.name}}
															</em>
														</div>
														<a href="{{path('modele_show', {slug:camera.slug} )}}"><img src="/build/images/imagesCam/{{camera.img}}" alt=""></a>
													{% elseif camera.img == 0 and camera.image | length >= 1 %}
														<img class="imgCam" src="{{camera.image}}" alt="Photographie de la camera {{camera.marque}} {{camera.name}}">
													{% else %}
														<div class="description">
															<h3>{{camera.marque}}</h3>
															<h2>{{camera.name}}</h2>
															{% for c in camera.type %}
																<em>{{c.name}}</em>
															{% endfor %}
															{% for f in camera.format %}
																<em>{{f.name}}</em>
															{% endfor %}
														</div>
													{% endif %}
												</div>
												<a href="{{path('modele_show', {slug:camera.slug} )}}">
													<div class="description__overlay description__overlay--blur">
														<h3>{{camera.marque}}</h3>
														<h2>
															{{camera.name}}</h2>
														{% for c in camera.type %}
															<em>{{c.name}}</em>
														{% endfor %}
														{% for f in camera.format %}
															<em>{{f.name}}</em>
														{% endfor %}
													</div>
												</a>
											</div>
										</div>
									{% endfor %}
								{% else %}
									<p>pas de camera</p>
								{% endif %}
							</div>
						</div>
						<div class="tabPanel" style="display: none;">
							<div class="posters">
								{% if marque.films %}
									{% for film in marque.films | slice(0, 6) %}
										{# <div class="cardGrid">
																																																																																																					<div class="cardSm">
																																																																																																						<div class="imgCard">
																																																																																																							{% if film.poster %}
																																																																																																								<a href="{{path('film_show', {slug: film.slug,})}}"><img src="/build/images/posters/{{film.poster}}" alt="Affiche du film {{film.title}}"></a>
																																																																																																							{% else %}
																																																																																																								<div class="description">
																																																																																																									<h1 id="over">{{film.title}}</h1>
																																																																																																									<div class="genreOverlay">
																																																																																																										{% for g in film.genres %}
																																																																																																											<em>{{g.name}}</em>
																																																																																																										{% endfor %}
																																																																																										
																																																																																																									</div>
