{% extends 'navbar/layout.html.twig' %}

{% block title %}Francecam | S'inscrire
{% endblock %}

{% block content %}

	<div class="container">
		<div class="loginContainer">
			{{form_start(registrationForm)}}
			<div class="login-form">
				<div class="connexionTitle">
					<h1>S'inscrire</h1>
				</div>
				<div class="flex-row">
					{{form_row(registrationForm.name)}}
				</div>
				<div class="flex-row">
					{{form_row(registrationForm.email)}}
				</div>
				<div class="flex-row">
					<div class="cadre">{{form_row(registrationForm.plainPassword)}}</div>
				</div>
				<div class="flex-row">
					<div class="cgu">
						{{form_row(registrationForm.termes)}}
						<em>Accepter les
							<a href="">conditions générales d'utilisation</a>.</em>
					</div>
				</div>
				<div class="flex-row">
					{{ form_row(registrationForm.captchaCode, {'attr': {'class': 'form-control'}}) }}
				</div>
				<input type="submit" value="Envoyer" class="lf--submit" novalidate>
				{{form_end(registrationForm)}}

			</div>
		</div>
	</div>
{% endblock %}
